.module-title-component
  display: flex
  justify-content: space-between
  align-items: center
  height: 65px
  padding: 20px 0 10px
  .module-title
    margin: 0
    font-size: 18px
    color: rgba(0, 0, 0, 0.84)
    display: flex
    cursor: pointer
    .foldable-icon
      display: inline-block
      width: 18px
      height: @width
      background-size: 100%
      background-repeat: no-repeat
      background-image: url(./images/down-arrow.png)
      margin-right: 5px
      &.fold
        background-image: url(./images/right-arrow.png)
    .description
      font-size: 12px
      margin-left: 10px
      color: rgba(0, 0, 0, 0.42)
  .module-extra
    font-size: 12px
    color: #000
    cursor: pointer